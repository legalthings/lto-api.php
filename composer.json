{
    "name": "legalthings/lto-api",
    "description": "LegalThings One client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "LegalThings",
            "email": "info@legalthings.io"
        }
    ],
    "support": {
        "issues": "https://github.com/legalthings/lto-api.php/issues",
        "source": "https://github.com/legalthings/lto-api.php"
    },
    "bin": ["bin/lto-sign"],
    "require": {
        "php": "~7.1",
        "ext-json": "*",
        "ext-sodium": "2.* || 7.*",
        "psr/http-message": "^1.0",
        "legalthings/base58-compat": "^0.1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "jasny/php-code-quality": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "LTO\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "LTO\\Tests\\": "tests/"
        }
    }
}
